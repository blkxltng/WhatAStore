<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:elevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

        <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/listItemStore_imageView" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listItemStore_nameTextView" app:layout_constraintStart_toEndOf="@+id/listItemStore_imageView"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/listItemStore_imageView" tools:text="ThinkGeek"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listItemStore_addressTextView"
                app:layout_constraintTop_toBottomOf="@+id/listItemStore_nameTextView" android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/listItemStore_imageView" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" tools:text="123 None-a-yo-bidness lane"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listItemStore_stateTextView" app:layout_constraintStart_toEndOf="@+id/listItemStore_imageView"
                app:layout_constraintTop_toBottomOf="@+id/listItemStore_addressTextView" android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" tools:text="Anywhere, IDK 12345"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listItemStore_phoneTextView"
                app:layout_constraintTop_toBottomOf="@+id/listItemStore_stateTextView" app:layout_constraintStart_toEndOf="@+id/listItemStore_imageView"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                tools:text="123-456-7890"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>